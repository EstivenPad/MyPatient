@model Doctor

<h1 class="text-center ms-2 text-danger">ELIMINAR DOCTOR</h1>

<div class="container">
    <form method="post">
        @Html.AntiForgeryToken()
        <input asp-for="Id" hidden />
        <div class="row mb-3">
            <div class="col-12 col-md-6">
                <label for="firstname" class="form-label">Nombre</label>
                <input class="form-control" id="firstname" asp-for="FirstName" disabled />
            </div>

            <div class="col-12 col-md-6">
                <label for="lastname" class="form-label">Apellidos</label>
                <input class="form-control" id="lastname" asp-for="LastName" disabled />
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-12 col-md-6">
                <label for="type" class="form-label">Nivel Médico</label>
                <select id="type" class="form-select" asp-for="Type" disabled>
                    <option value="0">Residente</option>
                    <option value="1">MA</option>
                </select>
            </div>

            <div class="col-12 col-md-6">
                <label class="form-label">Sexo</label>

                <div>
                    <input type="radio" class="form-check-input" id="female" asp-for="Sex" value="false" disabled />
                    <label for="female" class="form-check-label">Masculino</label>

                    <input type="radio" class="form-check-input" id="male" asp-for="Sex" value="true" disabled />
                    <label for="male" class="form-check-label">Femenino</label>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-12 col-md-6">
                <label for="identification" class="form-label">Identificación</label>
                <input class="form-control" id="identification" placeholder="000-0000000-0" asp-for="Identification" disabled />
            </div>

            <div class="col-12 col-md-6">
                <label for="exequatur" class="form-label">Exequatur</label>
                <input class="form-control" id="exequatur" placeholder="00000-00" asp-for="Exequatur" disabled />
            </div>
        </div>

        <div class="row">
            <div class="mt-3 d-flex gap-2">
                <a onclick="alertDelete('Está seguro que desea eliminar este Doctor?', 'El Doctor ha sido eliminado.','/Doctor/Delete?id=@Model.Id', '/Doctor')" class="btn btn-danger w-50">Eliminar</a>

                <a class="btn btn-secondary w-50" asp-controller="Doctor" asp-action="Index">
                    Volver
                </a>
            </div>
        </div>
    </form>
</div>