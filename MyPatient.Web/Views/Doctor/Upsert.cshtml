@model Doctor

<h1 class="text-center ms-2 @(Model.Id == 0 ? "text-primary" : "text-warning")">@(Model.Id == 0 ? "CREAR" : "EDITAR") DOCTOR</h1>

<div class="container">
    <form method="post">
        @Html.AntiForgeryToken()
        <input asp-for="Id" hidden />
        <div class="row mb-3">
            <div class="col-12 col-md-6">
                <label for="firstname" class="form-label">Nombre</label>
                <input class="form-control" id="firstname" asp-for="FirstName" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6">
                <label for="lastname" class="form-label">Apellidos</label>
                <input class="form-control" id="lastname" asp-for="LastName" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-12 col-md-6">
                <label for="type" class="form-label">Nivel Médico</label>
                <select id="type" class="form-select" asp-for="Type">
                    <option value="0">Residente</option>
                    <option value="1">MA</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            
            <div class="col-12 col-md-6">
                <label class="form-label">Sexo</label>

                <div>
                    <input type="radio" class="form-check-input" id="female" asp-for="Sex" value="false" />
                    <label for="female" class="form-check-label">Masculino</label>

                    <input type="radio" class="form-check-input" id="male" asp-for="Sex" value="true" />
                    <label for="male" class="form-check-label">Femenino</label>
                </div>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-12 col-md-6">
                <label for="identification" class="form-label">Identificación</label>
                <input class="form-control" id="identification" placeholder="000-0000000-0" asp-for="Identification" />
                <span asp-validation-for="Identification" class="text-danger"></span>
            </div>

            <div class="col-12 col-md-6">
                <label for="exequatur" class="form-label">Exequatur</label>
                <input class="form-control" id="exequatur" placeholder="00000-00" asp-for="Exequatur" />
                <span asp-validation-for="Exequatur" class="text-danger"></span>
            </div>
        </div>

        <div class="row">
            <div class="mt-3 d-flex gap-2">
                <button type="submit" class="btn btn-@(Model.Id == 0 ? "primary" : "warning") w-50">
                    @(Model.Id == 0 ? "Guardar" : "Editar")
                </button>

                <a class="btn btn-secondary w-50" asp-controller="Doctor" asp-action="Index">
                    Volver
                </a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}