                <div style="display: -webkit-box; padding-left: 5px;">
                    <div style="width:50%;">
                        <span><b>DREN:</b> sssssss</span>
                    </div>
                    <div style="width:50%;">
                        <span><b>ALERGIAS:</b> xxxxxxxx</span>
                    </div>
                </div>
                <div>
                    <ul style="list-style-type:none; margin: 0 0 0 5px; padding:0;">
                        <li><b>INTERCONSULTAS:</b> </li>
                        <li><b>LABORATORIOS:</b> </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="border" style="padding-left: 5px;">
            <p style="padding:0; margin:0;"> &nbsp;</p>
        </div>

        <div style="width: 100%;">
            <table style="width: 100%;">
                <thead>
                    <tr>
                        <th>SOLUCIONES</th>
                        <th>DOSIS</th>
                        <th>FRECUENCIA</th>
                        <th>VIA</th>
                    </tr>
