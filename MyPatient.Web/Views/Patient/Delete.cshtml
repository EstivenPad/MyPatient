@model PatientDeleteVM

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a asp-controller="Patient" asp-action="Index">Pacientes</a>
    </li>
    <li class="breadcrumb-item active">Eliminar paciente</li>
</ol>

<div class="container p-4 border bg-white rounded-3 shadow-sm">
    <form method="post">
        <input asp-for="Patient.Id" hidden />
        <div class="row">
            <div class="col-12 col-md-6 mb-3">
                <label for="record" class="form-label">Record</label>
                <input class="form-control" id="record" asp-for="Patient.Record" disabled />
            </div>

            <div class="col-12 col-md-6 mb-3">
                <label for="identification" class="form-label">Identificación</label>
                <input class="form-control" id="identification" asp-for="Patient.Identification" disabled />
            </div>
        </div>

        <div class="mb-3">
            <label for="name" class="form-label">Nombre</label>
            <input class="form-control" id="name" asp-for="Patient.Name" disabled />
        </div>

        <div class="row mb-3">
            <div class="col-12 col-md-4">
                <label class="form-label">Sexo</label>
                <div>
                    <input type="radio" class="form-check-input" id="male" asp-for="Patient.Sex" value="true" checked disabled />
                    <label for="male" class="form-check-label">Masculino</label>

                    <input type="radio" class="form-check-input" id="female" asp-for="Patient.Sex" value="false" disabled />
                    <label for="female" class="form-check-label">Femenino</label>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <label for="age" class="form-label">Edad</label>
                <div class="input-group">
                    <input class="form-control" id="age" placeholder="0" asp-for="Patient.Age" min="1" disabled />
                    <span class="input-group-text" id="age_measure">Años</span>
                </div>
            </div>
            <div class="col-12 col-md-4">
                <label for="weight" class="form-label">Peso</label>
                <div class="input-group">
                    <input type="number" class="form-control" id="weight" placeholder="0" asp-for="Patient.Weight" min="1" disabled />
                    <span class="input-group-text" id="weight_measure">Lb</span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                <h5 class="text-primary">MA</h5>
                <div class="border border-primary p-3 mb-3" style="border-radius: 10px">
                    <div class="mb-3">
                        <label class="form-label">MA Responsable</label>
                        <input class="form-control" id="ma" asp-for="MA" disabled />
                    </div>
                </div>

                <div class="mt-3">
                    <a class="btn btn-danger w-100"
                       onclick="alertDelete('Está seguro que desea eliminar este paciente?',
                                            'El paciente ha sido eliminado.',
                                            '/Patient/Delete/@Model.Patient.Id',
                                            '/Patient')" 
                    >
                        <i class="bi bi-trash-fill"></i> Eliminar
                    </a>
                </div>
            </div>

            <div class="col-6">
                <h5 class="text-primary">Seguro Médico</h5>
                <div class="border border-primary p-3" style="border-radius: 10px">
                    <div class="mb-3">
                        <input type="checkbox" class="form-check-input" id="isInsured" asp-for="Patient.IsInsured" disabled />
                        <label for="isInsured" class="form-check-label">Es Asegurado</label>
                    </div>

                    <div class="mb-3">
                        <label for="ars" class="form-label">ARS</label>
                        <input class="form-control" id="ars" asp-for="Patient.ARS" disabled />
                    </div>
                    
                    <div class="mb-3">
                        <label for="nss" class="form-label">NSS</label>
                        <input class="form-control" id="nss" asp-for="Patient.NSS" disabled />
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>